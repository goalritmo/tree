---
import { Image } from "astro:assets";

import { SITE } from "@/siteConfig";

import profilePicture from "@/assets/profile-picture.jpg";
---

<div class="mt-8 py-4">
  <a href="https://youtu.be/6_R1LiTBBgg" class="block relative group" target="_blank" rel="noopener noreferrer">
    <Image
      src={profilePicture}
      alt={SITE.name}
      height={256}
      width={256}
      loading="eager"
      draggable="false"
      class="mx-auto size-32 rounded-full"
    />
    <img
      src="/casco.png"
      alt="Casco"
      class="absolute top-[calc(50%-8px)] left-1/2 transform -translate-x-1/2 -translate-y-1/2 size-48 opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    />
  </a>
  <a href="https://youtu.be/0-X4wgliT3c" class="block" target="_blank" rel="noopener noreferrer">
    <h1 class="mt-4 text-center text-3xl font-semibold">{SITE.name}</h1>
  </a>
  <p
    class="mt-1 text-balance text-center text-sm text-lightModeForegroundMuted dark:text-darkModeForegroundMuted"
  >
    {SITE.bio}
  </p>
</div>
